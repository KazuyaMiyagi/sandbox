terraform {
  backend "s3" {
    region         = "ap-northeast-1"
    bucket         = "..."
    key            = "log-analytics/terraform.tfstate"
    encrypt        = true
    dynamodb_table = "..."
  }
}

data "terraform_remote_state" "base" {
  config = {
    region  = "ap-northeast-1"
    bucket  = "..."
    key     = "base/terraform.tfstate"
    encrypt = true
  }
}
